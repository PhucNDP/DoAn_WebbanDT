@model Product

<div class="row mt-3">
    <div class="col-md-3">
        @if(Model.ImageUrl != null)
            {
                <img src="/@Model.ImageUrl" style="width: 300px" />
            }
    </div>
    <div class="col-md-9">
        <div class="alert alert-info">
            <h4> THÔNG TIN CHI TIẾT SẢN PHẨM</h4>
        </div>
        <div class="mt-3">
            <h5>Tên sản phẩm: @Model.Name</h5>
        </div>
        <div class="mt-3">
            <h5>Giá sản phẩm: <span class="price">@Model.Price</span>USD</h5>
        </div>
        <div class="mt-3 mb-4">
            <a asp-action="AddToCart" asp-route-id="@Model.Id" class="btn btn-success"><i class="bi bi-cart"></i>Add to cart</a>
        </div>
        <div class="alert alert-info">
            <h4>Mô tả</h4>
        </div>
        <p class="mt-3">
            @Html.Raw(Model.Description)
        </p>
    </div>
</div>
<!--Hiển thị danh sách sản phẩm cùng loại-->
<h4 class="alert alert-primary">
    Sản phẩm cùng loại
</h4>
<div class="row md-4 ">
    @foreach (var x in ViewBag.LIST_PRODUCT)
    {
        <div class="col-md-3">
            <div class="card mb-2 product-item">
                <div class="card-header">@x.Name</div>
                <div class="card-body">
                    <h4 class="card-title">
                        <a asp-action="Detail" asp-route-id="@x.Id"><img src="/@x.ImageUrl" style="width: 150px" /></a>
                    </h4>
                </div>
            </div>
        </div>
    }
</div>
    
       

